# Enhanced Standard Library Examples

print "=== Math Functions ==="

# Square root
set area to 64
set side to call sqrt with area
print "Square root of 64 is"
print side

# Power (exponentiation)
set base to 2
set exponent to 8
set result to call power with base, exponent
print "2 to the power of 8 is"
print result

# Absolute value
set negative to -42
set positive to call abs with negative
print "Absolute value of -42 is"
print positive

# Rounding
set pi_approx to 3.14159
set rounded to call round with pi_approx
print "Rounded 3.14159 is"
print rounded

set down to call floor with 3.9
set up to call ceil with 3.1
print "Floor of 3.9 is", down
print "Ceiling of 3.1 is", up

# Min and Max
set smallest to call min with 7, 2, 9, 1, 5
set largest to call max with 7, 2, 9, 1, 5
print "Min of [7, 2, 9, 1, 5] is"
print smallest
print "Max of [7, 2, 9, 1, 5] is"
print largest

# Random number
set random_val to call rand with
print "Random number:", random_val

print ""
print "=== Type Conversion ==="

# String to number
