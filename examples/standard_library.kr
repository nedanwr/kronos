print "=== List Utilities ==="

# Reverse a list
set original to list 1, 2, 3, 4, 5
set reversed to call reverse with original
print "Original list:", original
print "Reversed list:", reversed

# Sort a list of numbers
set unsorted_nums to list 5, 2, 8, 1, 9, 3
set sorted_nums to call sort with unsorted_nums
print "Unsorted:", unsorted_nums
print "Sorted:", sorted_nums

# Sort a list of strings
set unsorted_words to list "zebra", "apple", "banana", "cherry"
set sorted_words to call sort with unsorted_words
print "Unsorted words:", unsorted_words
print "Sorted words:", sorted_words

print ""
print "=== Combining Functions ==="

# Calculate distance using sqrt and power
set x1 to 0
set y1 to 0
set x2 to 3
set y2 to 4

set dx to x2 minus x1
set dy to y2 minus y1
set dx_squared to call power with dx, 2
set dy_squared to call power with dy, 2
set sum_squares to dx_squared plus dy_squared
set distance to call sqrt with sum_squares
print "Distance from (0,0) to (3,4) is"
print distance

# Process a list of numbers
set values to list 5, -3, 8, -1, 4
for val in values:
    let abs_val to call abs with val
    print "Absolute value:"
    print abs_val

